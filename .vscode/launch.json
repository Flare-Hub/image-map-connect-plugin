  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html/wp-content/plugins/flare-image-map": "${workspaceFolder}"
      },
    },
    {
      "name": "Attach to Edge",
      "type": "msedge",
      "port": 9222,
      "request": "attach",
      "webRoot": "${workspaceFolder}"
    },
  ]
}
