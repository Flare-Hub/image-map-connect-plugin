{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "flare/image-map",
  "title": "Map with single marker",
  "category": "widgets",
  "icon": "location-alt",
  "description": "An image map displaying the selected map with it's markers.",
  "keywords": [
    "image",
    "map",
    "markers",
    "list"
  ],
  "textdomain": "flare",
  "attributes": {
    "mapId": {
      "type": "number"
    },
    "height": {
      "type": "string",
      "default": "400px"
    },
    "width": {
      "type": "string",
      "default": "100%"
    },
    "queryType": {
      "type": "string",
      "default": "query"
    },
    "showStandAlone": {
      "type": "boolean",
      "default": true
    }
  },
  "usesContext": [
    "queryId",
    "query"
  ],
  "editorScript": "file:./editor/index.js",
  "viewScript": "file:./view/index.js",
  "editorStyle": "file:./editor/index.css"
}