{
  "name": "image-map-connect",
  "scripts": {
    "start": "npm-run-all --parallel dockerup watch sync",
    "sync": "node browser-sync.js",
    "build": "wp-scripts build --webpack-src-dir=app",
    "watch": "wp-scripts start --webpack-src-dir=app",
    "dockerup": "docker compose --env-file docker.env --file ./docker/docker-compose.yml up",
    "dockerdown": "docker compose --env-file docker.env --file ./docker/docker-compose.yml down",
    "wp": "docker compose --env-file docker.env --file ./docker/docker-compose.yml exec wordpress wp",
    "lint": "eslint app/**/*.{js,jsx} && stylelint app/**/*.{css,scss}",
    "package": "npm install && npm run build && composer archive -f zip --file image-map-connect"
  },
  "license": "GPLv3",
  "devDependencies": {
    "@svgr/webpack": "^8.0.1",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.2.0",
    "@wordpress/eslint-plugin": "^14.9.0",
    "@wordpress/prettier-config": "^2.19.0",
    "@wordpress/scripts": "^26.7.0",
    "@wordpress/stylelint-config": "^21.19.0",
    "browser-sync": "^2.29.3",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.3.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "json-css": "^1.5.6",
    "npm-run-all": "^4.1.5",
    "stylelint-config-css-modules": "^4.2.0",
    "wait-on": "^7.0.1",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "@tiptap/extension-underline": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "@wordpress/api-fetch": "^6.33.0",
    "@wordpress/block-editor": "^12.4.0",
    "@wordpress/components": "^25.2.0",
    "@wordpress/core-data": "^6.13.0",
    "@wordpress/data": "^9.6.0",
    "@wordpress/element": "^5.13.0",
    "@wordpress/hooks": "^3.36.0",
    "@wordpress/i18n": "^4.36.0",
    "@wordpress/icons": "^9.27.0",
    "@wordpress/notices": "^4.4.0",
    "history": "^5.3.0",
    "mustache": "^4.2.0",
    "ol": "^7.4.0",
    "ol-ext": "^4.0.9",
    "rc-slider": "^10.2.1",
    "react-hook-form": "^7.45.1",
    "reflex-grid": "^2.0.7",
    "remixicon": "^3.4.0"
  },
  "prettier": "@wordpress/prettier-config"
}