{
  "name": "flare-image-map",
  "version": "1.0.0",
  "description": "Template for developing a wordpress plugin in a docker container using wp-scripts and react.",
  "scripts": {
    "start": "npm-run-all --parallel dockerup watch sync",
    "sync": "node browser-sync.js",
    "build": "wp-scripts build --webpack-src-dir=app",
    "watch": "wp-scripts start --webpack-src-dir=app",
    "dockerup": "docker compose --env-file docker.env --file ./docker/docker-compose.yml up",
    "dockerdown": "docker compose --env-file docker.env --file ./docker/docker-compose.yml down",
    "wp": "docker compose --env-file docker.env --file ./docker/docker-compose.yml exec wordpress wp"
  },
  "keywords": [
    "wordpress",
    "docker",
    "docker-compose",
    "react",
    "wp-scripts"
  ],
  "author": "Igor Honhoff",
  "license": "MIT",
  "devDependencies": {
    "@wordpress/scripts": "^25.2.0",
    "browser-sync": "^2.27.11",
    "dotenv": "^16.0.3",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@tiptap/extension-underline": "^2.0.0-beta.209",
    "@tiptap/react": "^2.0.0-beta.209",
    "@tiptap/starter-kit": "^2.0.0-beta.209",
    "@wordpress/api-fetch": "^6.22.0",
    "@wordpress/block-editor": "^11.2.0",
    "@wordpress/components": "^23.2.0",
    "@wordpress/core-data": "^6.2.0",
    "@wordpress/data": "^8.2.0",
    "@wordpress/element": "^5.2.0",
    "@wordpress/i18n": "^4.25.0",
    "@wordpress/icons": "^9.16.0",
    "history": "^5.3.0",
    "ol": "^7.2.2",
    "reflex-grid": "^2.0.7"
  }
}
