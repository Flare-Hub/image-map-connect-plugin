{
  "name": "flare-image-map",
  "version": "1.0.0",
  "description": "Template for developing a wordpress plugin in a docker container using wp-scripts and react.",
  "scripts": {
    "start": "npm-run-all --parallel dockerup watch sync",
    "sync": "node browser-sync.js",
    "build": "wp-scripts build --webpack-src-dir=app",
    "watch": "wp-scripts start --webpack-src-dir=app",
    "dockerup": "docker compose --env-file docker.env --file ./docker/docker-compose.yml up",
    "dockerdown": "docker compose --env-file docker.env --file ./docker/docker-compose.yml down",
    "wp": "docker compose --env-file docker.env --file ./docker/docker-compose.yml exec wordpress wp",
    "lint": "eslint app/**/*.{js,jsx} && stylelint app/**/*.{css,scss}"
  },
  "keywords": [
    "wordpress",
    "docker",
    "docker-compose",
    "react",
    "wp-scripts"
  ],
  "author": "Igor Honhoff",
  "license": "MIT",
  "devDependencies": {
    "@svgr/webpack": "^8.0.1",
    "@types/ol-ext": "npm:@siedlerchr/types-ol-ext@^3.0.9",
    "@wordpress/eslint-plugin": "^14.8.0",
    "@wordpress/prettier-config": "^2.18.0",
    "@wordpress/scripts": "^26.2.0",
    "@wordpress/stylelint-config": "^21.18.0",
    "browser-sync": "^2.29.1",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "json-css": "^1.5.6",
    "npm-run-all": "^4.1.5",
    "stylelint-config-css-modules": "^4.2.0",
    "wait-on": "^7.0.1",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "dependencies": {
    "@tiptap/extension-underline": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "@wordpress/api-fetch": "^6.28.0",
    "@wordpress/block-editor": "^11.8.0",
    "@wordpress/components": "^23.8.0",
    "@wordpress/core-data": "^6.8.0",
    "@wordpress/data": "^9.1.0",
    "@wordpress/element": "^5.8.0",
    "@wordpress/i18n": "^4.31.0",
    "@wordpress/icons": "^9.22.0",
    "@wordpress/notices": "^4.1.0",
    "history": "^5.3.0",
    "mustache": "^4.2.0",
    "ol": "^7.3.0",
    "ol-ext": "^4.0.7",
    "react-hook-form": "^7.43.9",
    "reflex-grid": "^2.0.7",
    "remixicon": "^3.2.0"
  },
  "prettier": "@wordpress/prettier-config"
}
